<div class="flex items-center justify-center">
  <div class="pt-6 pb-8 mb-4 w-full max-w-xs sm:max-w-md mx-auto">
    <h2 class="text-center text-xl font-bold mb-4"><%= I18n.t('users.show.title') %></h2>
    <div id="user-info-container">
      <%= render partial: 'users/edit_username', locals: { user: @user } %>
    </div>

    <script>
      function editUserName() {
        // ユーザー名を非表示にし、編集フォームを表示する
        document.getElementById('user-name').style.display = 'none';
        document.getElementById('edit-icon').style.display = 'none';
        document.getElementById('edit-form').style.display = 'block';
      }

      function cancelEdit() {
        // 編集フォームを非表示にし、ユーザー名を再表示する
        document.getElementById('edit-form').style.display = 'none';
        document.getElementById('user-name').style.display = 'inline';
        document.getElementById('edit-icon').style.display = 'inline';
      }
    </script>

    <div class="mt-4 mb-4">
    <label class="block text-gray-700 text-sm font-bold mb-2">
        <%= t('form.labels.email') %>
      </label>

      <div class="flex items-center">
        <div class="w-full">
          <span class="appearance-none border-2 rounded py-2 px-3 text-gray-700 leading-tight" 
                style="text-align: center; display: inline-block; width: 100%; height: 40px;">
            <%= @user.email %>
          </span>
        </div>
        <%= link_to '変更', edit_user_registration_path, class: "ml-2 bg-red-400 text-white p-2 rounded flex items-center justify-center", style: "font-weight: bold; height: 40px; min-width: 80px;" %>
      </div>
    </div>

    <div class="mb-4">
      <label class="block text-gray-700 text-sm font-bold mb-2">
        <%= t('form.labels.password') %>
      </label>

      <div class="flex items-center">
        <div class="w-full">
          <span class="appearance-none border-2 rounded py-2 px-3 text-gray-700 leading-tight" 
                style="text-align: center; display: inline-block; width: 100%; height: 40px;">
            ＊＊＊＊＊＊＊＊＊
          </span>
        </div>
        <%= link_to '変更', edit_user_registration_path, class: "ml-2 bg-red-400 text-white p-2 rounded flex items-center justify-center", style: "font-weight: bold; height: 40px; min-width: 80px;" %>
      </div>
    </div>   
  </div>
</div>
