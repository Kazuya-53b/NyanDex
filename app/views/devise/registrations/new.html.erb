<div class="flex items-center justify-center">
  <div class="pt-6 pb-8 mb-4 w-full max-w-xs sm:max-w-md mx-auto">
    <h2 class="text-center text-xl text-black-400 font-bold mb-4"><%= I18n.t('devise.registrations.new.title') %></h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4">
        <%= f.label :username, t('form.labels.username'), class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="mb-4">
        <%= f.label :email, t('form.labels.email'),class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, t('form.labels.password'), class: "block text-gray-700 text-sm font-bold mb-0" %>
        <% if @minimum_password_length %>
          <span class="text-gray-700 text-sm">(<%= "#{@minimum_password_length} #{t('devise.passwords.new.characters_minimum')}" %>)</span>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, I18n.t('form.labels.password_confirmation'), class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="flex justify-between mb-4">
        <div></div>
        <a class="inline-block align-baseline font-bold text-sm text-orange-500 hover:text-orange-00" href="#">
          <%= I18n.t('devise.passwords.new.forgot_password') %>
        </a>
      </div>

      <div class="flex justify-center mb-4">
        <%= f.submit t('devise.registrations.new.sign_up'), class: "bg-orange-500 hover:bg-orange-600 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      </div>
    <% end %>
  </div>
</div>
