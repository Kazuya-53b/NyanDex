<div class="flex items-center justify-center">
  <div class="pt-6 pb-8 mb-4 w-5/6 max-w-xs sm:max-w-md mx-auto">
    <h2 class="text-center text-xl text-black-400 font-bold mb-8"><%= I18n.t('devise.sessions.new.title') %></h2>
    <%= form_with model: @user, url: new_user_session_path, local: true do |f| %>

      <div class="flex justify-center mb-4">
        <%= link_to user_google_oauth2_omniauth_authorize_path, method: :post, class: "flex items-center py-2 px-4 border border-gray-300 rounded-lg hover:bg-gray-100 transition duration-150 ease-in-out" do %>
          <img src="https://www.svgrepo.com/show/355037/google.svg" alt="Google" class="h-4 w-4 mr-2 inline-block" style="height: 20px; width: 20px;" />
          <span class="inline-block">Googleでログイン</span>
        <% end %>
      </div>

      <div class="flex items-center justify-center mb-4">
        <span class="mx-2 text-gray-500">------------ or ------------</span>
      </div>

      <div class="mb-4">
        <%= f.label :email, t('form.labels.email'),class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="mb-8">
        <%= f.label :password, t('form.labels.password'), class: "block text-gray-700 text-sm font-bold mb-0" %>
        <% if @minimum_password_length %>
          <span class="text-gray-700 text-sm">(<%= "#{@minimum_password_length} #{t('devise.passwords.new.characters_minimum')}" %>)</span>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <!-- MVPでは未実装なので非表示、パスワードフォームのmbを4から8に変更
      <div class="flex justify-between mb-4">
        <div></div>
        <a class="inline-block align-baseline font-bold text-sm text-orange-500 hover:text-orange-300" href="#">
          <%= I18n.t('devise.passwords.new.forgot_password') %>
        </a>
      </div>
      -->

      <div class="flex justify-center mb-4">
        <%= f.submit t('devise.sessions.new.sign_in'), class: "bg-orange-500 hover:bg-orange-300 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      </div>
    <% end %>
  </div>
</div>